<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.procodecg.codingmom.ehealth.fragment.PencarianFragment"
    android:id="@+id/pencarian_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/text_cari"
        android:layout_marginTop="100dp"
        android:text="Masukkan kata kunci"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/input_cari"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/text_cari"
        android:inputType="text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@color/white"/>

    <Button
        android:id="@+id/button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="cari"
        android:layout_below="@+id/input_cari"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:onClick="goToPin"/>


</RelativeLayout>