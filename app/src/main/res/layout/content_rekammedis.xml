<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnStatis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Rekam Medis Statis" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/contentStatis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/alergi"
                        android:layout_margin="10dp"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="Alergi"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tampilkan"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rwytOperasi"
                        android:layout_margin="10dp"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="Riwayat Operasi"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tampilkan"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rwytRs"
                        android:layout_margin="10dp"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="Riwayat Rawat Inap"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tampilkan"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rwytPenyKronis"
                        android:layout_margin="10dp"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="Riwayat Penyakit Kronis"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tampilkan"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/penyBawaan"
                        android:layout_margin="10dp"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="Riwayat Penyakit Bawaan"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tampilkan"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/faktorRisiko"
                        android:layout_margin="10dp"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="Faktor Risiko"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tampilkan"/>

                </LinearLayout>

            </LinearLayout>




            <Button
                android:id="@+id/btnDinamis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Rekam Medis Dinamis" />



            <LinearLayout
                android:id="@+id/contentDinamis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/pemeriksaan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Rekam medis diurutkan berdasarkan tanggal pemeriksaan"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="25-7-2017"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:textAllCaps="true"
                    android:onClick="goToPin"/>

                <Button
                    android:id="@+id/button2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="6-5-2017"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:textAllCaps="true"
                    android:onClick="goToPin"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>