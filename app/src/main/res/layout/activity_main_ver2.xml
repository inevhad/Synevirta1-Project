<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#42b665">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selamat datang di"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/logo1"
        android:scaleType="fitCenter"
        android:paddingLeft="80dp"
        android:paddingRight="80dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ID Puskesmas"
                android:textSize="14sp"
                android:textColor="@color/blue"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_idPuskesmas"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Puskesmas"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_namaPuskesmas"
                android:textSize="16sp" />

        </LinearLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnSetting"
                android:src="@drawable/ic_edit1"
                android:background="@null"
                android:layout_marginTop="10dp"
                android:onClick="showEdit"
                android:layout_gravity="end"/>


    </LinearLayout>

        <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Masukkan kartu HPC Anda"
        android:paddingTop="15dp"
        android:paddingBottom="5dp"
        android:textSize="18sp"/>

        <Button
        android:id="@+id/btnShowDialog"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="..."
        android:background="@drawable/button1"
        android:textColor="#fff"
        android:textAllCaps="true"
        android:onClick="goToPin" />

</LinearLayout>