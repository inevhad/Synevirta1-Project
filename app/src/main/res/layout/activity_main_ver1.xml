<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#42b665">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selamat datang di"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/logo1"
        android:scaleType="fitCenter"
        android:paddingLeft="80dp"
        android:paddingRight="80dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/light_grey">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
>
        <TextView
            android:id="@+id/text_puskesmas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puskesmas"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txt_nama_puskesmas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_grey"
            android:textSize="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingBottom="5dp">

    <TextView
        android:id="@+id/text_idpuskesmas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ID Puskesmas :"
        android:textSize="16sp"/>
        <TextView
            android:id="@+id/idPuskesmas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_grey"
            android:textSize="20dp"
            />
</LinearLayout>
    </LinearLayout>
        <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Masukkan kartu HPC Anda"
        android:paddingTop="15dp"
        android:paddingBottom="5dp"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btnShowDialog"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="..."
        android:background="@drawable/button1"
        android:textColor="#fff"
        android:textAllCaps="true"
        android:onClick="goToPin"/>

</LinearLayout>