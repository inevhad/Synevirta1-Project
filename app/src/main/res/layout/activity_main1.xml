<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#42b665">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selamat datang di"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/logo1"
        android:scaleType="fitCenter"
        android:paddingLeft="80dp"
        android:paddingRight="80dp" />

    <EditText
        android:id="@+id/idpuskes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id puskesmas"
        android:textAllCaps="true"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"/>

    <EditText
        android:id="@+id/namapuskes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nama Puskesmas"
        android:textAllCaps="true"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent" />

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">

       <Button
           android:id="@+id/btnSimpan"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:layout_margin="25dp"
           android:text="simpan"
           android:background="@drawable/button1"
           android:textColor="#fff"
           android:textAllCaps="true"
           android:onClick="goToPin"/>

       <!--<TextView-->
       <!--android:id="@+id/textView11"-->
       <!--android:layout_width="match_parent"-->
       <!--android:layout_height="wrap_content"-->
       <!--android:gravity="center"-->
       <!--android:text="Masukkan kartu HPC Anda"-->
       <!--android:paddingTop="15dp"-->
       <!--android:paddingBottom="5dp"-->
       <!--android:textSize="18sp"/>-->
       <Button
           android:id="@+id/btnShowDialog"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:layout_margin="25dp"
           android:text="lanjut"
           android:background="@drawable/button1"
           android:layout_toRightOf="@+id/btnSimpan"
           android:textColor="#fff"
           android:textAllCaps="true"
           android:onClick="goToPin"/>


   </RelativeLayout>


</LinearLayout>